type Query {
    bookById(id: ID): Book
    bookByTitle(name: String):Book
}

type Mutation {
    addBook(bookInput: BookInput!):Book
}

type Book {
    id: ID
    title: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}

input BookInput {
    title: String
    pageCount: Int
    authorId: String
}

input AuthorInput {
    firstName: String
    lastName: String
}